#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/crate_node/helpers/ctl_setup.sh 'crate_node'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

	exec chpst -u vcap:vcap $JAVA_HOME/bin/java  \
               -server -XX:+UseG1GC -XX:MinHeapFreeRatio=5 -XX:MaxHeapFreeRatio=25 -Xms<%= p('crate.jvm.memoryMo') %>M -Xmx<%= p('crate.jvm.memoryMo') %>M \
               -Dlogback.configurationFile=$JOB_DIR/config/logback.xml \
               -Dcrate.config=$JOB_DIR/config/crate.xml \
               -classpath /var/vcap/packages/crate-bosh-uberjar-pkg/crate-bosh-uberjar.jar \
               com.crate.core.server.StartServer \
                >>$LOG_DIR/$JOB_NAME.log 2>&1
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: crate_node_ctl {start|stop}"

    ;;

esac
exit 0
